/* pages/acount/acount.wxss */
@import '../../template/template.wxss';
page {
  width: 100%;
  height: 100%;
  background: #ddd;
}
.acount {
  padding-bottom: 100rpx;
  box-sizing: border-box;
  height: 100%;
}

/* 地址样式 */
.addressList {
  /* height: 200rpx; */
  padding: 20rpx 0;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}
.detail, .recieve {
  height: 60rpx;
  line-height: 60rpx; 
  padding: 0 20rpx;
}
.detail_name{
  float: left;
  height: 100%;
  line-height: 60rpx;
}
.detail_tel {
  float: right;
  height: 100%;
  line-height: 60rpx;
  margin-right: 60rpx;
}
.right {
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  width: 60rpx;
  height: 60rpx;
}
.envelope {
  position: absolute;
  left: 0;
  top: 0;
  height: 1000rpx;
  width: 10rpx;
}

/* 商品样式 */
.goodslist {
  background: #fff;
  margin-bottom: 20rpx;  
}
.details {
  height: 200rpx;
  width: 100%;
  padding: 20rpx;
  border-bottom: 2rpx solid #ccc;
  font-size: 26rpx;
  position: relative;
}
.details-left {
  float: left;
  width: 80%;
  height: 100%;
}
.details-left .details-img {
  height: 100%;
  width: 200rpx;
  float: left;
}
.details-desc {
  float: left;
  margin-left: 5%;
  margin-top: 10%;
  width: 45%;
}
.details-name {
  margin-bottom: 10rpx;
}
.details-right {
  float: right;
  width: 20%;
  padding-right: 30rpx;
  box-sizing: border-box;
  height: 100%;
  text-align: center;
  line-height: 160rpx;
}  
/* 配送样式、支付样式、买家留言 */
.send, .paid, .msg, .count {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  background: #fff;
  position: relative;
  border-bottom: 2rpx solid #ddd;
}
.paid_select, .send_select {
  float: right;
  margin-right: 100rpx;
}
.msg_write {
  float: right;
  width: 75%;
  height: 80rpx;
  text-align: right;
  padding-right: 40rpx;
}

.send_right, .paid_right {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  width: 60rpx;
  height: 60rpx;
}
.count {
  text-align: right;
  padding-right: 40rpx;
}
.price {
  color: red;
}
/* 底部样式 */
.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background: #fff;
  font-size: 28rpx;
  border-top: 2rpx solid #ddd;
}
.total {
  float: left;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
  margin-left: 20rpx; 
}
.totalPrice {
  color: red;
}
.submit {
  float: right;
  width: 30%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 15rpx;
  margin-right: 20rpx;
  text-align: center;
  border-radius: 5rpx;
  color: #fff;
  background: red;
}