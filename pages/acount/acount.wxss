/* pages/acount/acount.wxss */
page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #ddd;
}
.acount {
  flex: 1;
}

/* 地址样式 */
.addressList {
  /* height: 200rpx; */
  padding: 20rpx 0;
  font-size: 28rpx;
  background: #fff;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}
.detail, .recieve {
  height: 60rpx;
  line-height: 60rpx; 
  padding: 0 20rpx;
}
.detail_name{
  float: left;
  height: 100%;
  line-height: 60rpx;
}
.detail_tel {
  float: right;
  height: 100%;
  line-height: 60rpx;
  margin-right: 60rpx;
}
.right {
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  width: 60rpx;
  height: 60rpx;
}
.envelope {
  position: absolute;
  left: 0;
  top: 0;
  height: 1000rpx;
  width: 10rpx;
}
/* 底部样式 */
.bottom {
  height: 100rpx;
  background: #fff;
  font-size: 28rpx;
}
.total {
  float: left;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
  margin-left: 20rpx; 
}
.totalPrice {
  color: red;
}
.submit {
  float: right;
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  text-align: center;
  border-radius: 5rpx;
  color: #fff;
  background: red;
}