/* pages/goods/goods.wxss */
.lf {
  float: left;
}
.rf {
  float: right;
}
.goods {
  font-size: 28rpx;
  margin-bottom: 80rpx;
}
.goods_img {
  width: 640rpx;
  margin: 0 auto;
  height: 480rpx;
  margin-bottom: 20rpx;
}

.goods_desc {
  width: 100%;
  /* height: 200rpx; */
  padding: 20rpx;
  box-sizing: border-box;
  border-top: 10rpx solid #ddd;
  border-bottom: 10rpx solid #ddd;
}
.goods_name {
  font-size: 32rpx;
}
.goods_category {
  color: #a5a5a5;
  margin: 20rpx 0;
}
.goods_price {
  overflow: hidden;
}
.price {
  color: red;
}
.price:before {
  content: 'ï¿¥';
}
.goods_details {
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  border-bottom: 20rpx solid #ddd;
}
.color {
  display: inline-block;
  width: 120rpx;
  margin: 20rpx;

  text-align: center;
  height: 100%;
  line-height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
}
.active {
  background: #000;
  color: #fff;
}
.message {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  color: #333;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
}
.msg{
  color: #666;
  font-weight: 400;
  font-size: 28rpx;
  
}
.imgs {
  text-align: center;
}
.fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
}
.add, .buy {
  width: 50%;
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.add {
  background: #000;
}
.buy {
  background: red;
}