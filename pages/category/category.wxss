/* pages/category/category.wxss */
page {
  height: 100%;
}
/* 搜索样式 */
.category_search {
  height: 5%;
  margin: 1% 0;
}
.search {
  width: 90%;
  height: 54rpx;
  margin: 0 auto;
  font-size: 28rpx;
  border: 2rpx solid #ccc; 
  box-sizing:border-box;
  padding-left: 10rpx;
  border-radius: 25rpx;
}
.search-img {
  height: 44rpx;
  margin-top: 5rpx;
  width: 7%;
  float: left;
}
.search .search-input {
  border: none;
  outline: none;
  padding: 0;
  margin:0;
  margin-left: 5rpx;
  float: left;
  height: 100%;
  width: 90%;
  font-size: 24rpx;
}
/* 分类样式 */
/* 滑块tab样式 */
.category {
  height: 93%;
}
.active {
  color: red;
  position: relative;
}
.active:after{ 
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #4675F9;
  position: absolute; 
  bottom: -10rpx;
  left: 0;
  border-radius: 16rpx;
}
.tabs {
  width: 100%;
  height: 8%; 
  white-space: nowrap;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 1.5% 0 ;
}
.tab-item {
  display: inline-block;
  margin: 0 40rpx;
  /* height: 50rpx; */
  /* line-height: 50rpx; */
}
/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 商品样式 */
.tabs-content {
  height: 92%;
}
.scroll-y {
  border-top: 2rpx solid #ccc;
}
.details {
  height: 200rpx;
  width: 100%;
  padding: 20rpx;
  border-bottom: 2rpx solid #ccc;
  font-size: 26rpx;
  position: relative;
}
.details-left {
  float: left;
  width: 80%;
  height: 100%;
}
.details-left .details-img {
  height: 100%;
  width: 200rpx;
  float: left;
}
.details-desc {
  float: left;
  /* height: 90%; */
  margin-left: 5%;
  margin-top: 10%;
  width: 45%;
}
.details-right {
  float: right;
  width: 20%;
  padding-right: 30rpx;
  box-sizing: border-box;
  height: 100%;
  text-align: center;
  line-height: 200rpx;
}
.addCart {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 80rpx;
  bottom: 50rpx;
}
.addCart_img {
  height: 100%;
  width: 100%;
}