<scroll-view scroll-y = "true" class = "scroll" >
  <view class = "details" wx:for = "{{cart}}" wx:key = "index">
    <view class = "details-left">
      <view class = "select" bindtap="toggle_select" data-current = "{{index}}" >
        <image src = "../select.png" class = "select_img" wx:if = "{{!item.isSelect}}"></image>
        <image src = "../unselect.png" class = "unselect_img" wx:if = "{{item.isSelect}}"></image>
      </view>
      <image class = "details-img" src="{{imgUrl+item.imgurl}}"  data-id = "{{item.ID}}" bindtap='toDetail'></image>
      <view class = "details-desc">
        <view class = "details-name">{{item.name}}</view>
        <view class = "details-sales">{{'已售： '+item.sales+' 份'}}</view>
      </view>
    </view>
    <view class = "details-right details-price">￥{{item.nowPrice}}</view>
    <view class = "addCart">
      <view class = "plus">
        <image class = "sub1" src = "../sub1.png"></image>
        <image class = "sub2" src = "../sub2.png" wx:if = "{{max}}"></image>
      </view>
        <view class = "num">
          <input type = "number" value="{{item.qty}}"/>
        </view>
        <view class = "sub">
          <image class = "plus1" src = "../plus1.png"></image>
          <image class = "plus2" src = "../plus2.png" wx:if = "{{max}}"></image>
        </view>
    </view>
  </view>
</scroll-view>
<view class = "bottom_fixed">
  <view class = "bottom_left">
    <image class = "selectAll" src = "../select.png" wx:if = "{{!selected}}"></image>
    <image class = "selectAll" src = "../unselect.png" wx:if = "{{selected}}"></image>
    <text class = "select_text">全选</text>
    <view class = "total">
      总价: ￥<text class = "totalPrice">{{totalPrice}}</text>
    </view>
  </view>
  <view class = "bottom_right">
    结算:(<text class = "totalPrice">{{totalNum}}</text>)
  </view>
</view>